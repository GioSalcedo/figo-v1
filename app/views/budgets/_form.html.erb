
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= simple_form_for @budget do |f| %>
      <%= f.input :business_id, label: "¿Para que empresa?", collection: current_user.businesses %>
      <%= f.input :name, label: "Presupuesto: " %>
      <%= f.input :date, label: "Fecha", as: :date, order: [:day, :month, :year]%>
      <%= f.input :balance, label: "Monto" %>
      <%= f.input :currency, label: "Moneda", as: :radio_buttons, collection:["COP"] %>
      <%= f.input :note, label: "Observación" %>
      <%= f.button :submit, class:"btn btn-secundary" %>
    <% end %>
  </div>
</div>
