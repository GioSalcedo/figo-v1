<div id="content" class="bg-grey w-100">
      <section class="bg-mix py-3">
        <div class="container">
          <div class="card rounded-0">
            <div class="card-body">
              <div class="row">
                <% @business.accounts.each do |account| %>
                <div class="col-lg-3 col-md-6 d-flex my-3">
                <div class="mx-auto">
                <div class="info">
                  <h6 class="text-muted"><%= account.name %></h6>
                  <h3 class="font-weight-bold">$<%= account.balance %></h3>
                  <%# <h3 class="font-weight-bold"><%= account.currency %></h3>
                </div>
                </div>
                </div>
                <% end %>
              </div>
              <div class="col-lg-3 col-md-6 d-flex my-3">
                <div class="mx-auto">
                  <h6 class="text-muted">Agregar nueva cuenta</h6>
                  <h3 class="font-weight-bold"></h3>
                  <h3 class="font-weight-bold">
                    <i class=""> <%= render "shared/newaccount" %></i>
                  </h3>
                </div>
              </div>
              <% total = 0 %> <% @business.accounts.each do |account| %> <%
              total += account.balance %> <% end %>
              <div
                class="info"
                style="display: flex; justify-content: space-between"
              >
                <h6>Saldo total en mis cuentas: $<%= total %></h6>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 my-3">
              <div class="card rounded-0">
                <div class="card-header bg-light">
                  <h6 class="font-weight-bold mb-0">Transacciones</h6>
                </div>
                <div class="card-body">
                  <table class="tabla">

                    <thead>
                      <tr>
                        <th>Fecha</th>
                        <th>Descripción</th>
                        <th>Categoría</th>
                        <th>Monto</th>
                      </tr>
                    </thead>
                    <% @business.accounts.each do |account| %>
                    <% account.earnings.last(5).each do |earning| %>
                    <tbody>
                      <tr>
                        <td><%= earning.date %></td>
                        <td><%= earning.note %></td>
                        <td><%= earning.category %></td>
                        <td><%= earning.balance %></td>
                      </tr>
                    </tbody>
                  <% end %>
                  <% end %>
                    <% @business.accounts.each do |account| %>
                    <% account.egresses.last(5).each do |earning| %>
                    <tbody>
                      <tr>
                        <td><%= earning.date %></td>
                        <td><%= earning.note %></td>
                        <td><%= earning.category %></td>
                        <td><%= earning.balance %></td>
                      </tr>
                    </tbody>
                  <% end %>
                  <% end %>
                  </table>
                </div>
              </div>


            </div>
            <div class="col-lg-4 my-3">
              <div class="card rounded-0">
                <div class="card-header bg-light">
                  <h6 class="font-weight-bold mb-0">Lo último</h6>
                </div>
                  <% @business.accounts.each do |account| %>
                    <% account.earnings.last(5).each do |earning| %>
                <div class="card-body pt-2">
                  <div class="d-flex border-bottom py-2">
                    <div class="d-flex mr-3">
                      <h2 class="align-self-center mb-0">
                        <i class="icon ion-md-pricetag"></i>
                      </h2>
                    </div>
                    <div class="align-self-center">
                      <h6 class="d-inline-block mb-0"><%= earning.balance %></h6>
                      <span class="badge badge-success ml-2">Ingreso</span>
                      <small class="d-block text-muted"><%= earning.note %></small>
                      <small class="d-block text-muted"><%= account.name %></small>
                    </div>
                  </div>
                </div>
                    <% end %>
                  <% end %>

                  <% @business.accounts.each do |account| %>
                    <% account.egresses.last(5).each do |earning| %>
                <div class="card-body pt-2">
                  <div class="d-flex border-bottom py-2">
                    <div class="d-flex mr-3">
                      <h2 class="align-self-center mb-0">
                        <i class="icon ion-md-pricetag"></i>
                      </h2>
                    </div>
                    <div class="align-self-center">
                      <h6 class="d-inline-block mb-0"><%= earning.balance %></h6>
                      <span class="badge badge-success ml-2">Egreso</span>
                      <small class="d-block text-muted"><%= earning.note %></small>
                      <small class="d-block text-muted"><%= account.name %></small>
                    </div>
                  </div>
                </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
