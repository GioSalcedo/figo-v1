<%= link_to "Nueva empresa", new_business_path, class:"btn btn-secundary mb-2" %>
<div class="row">
  <% @businesses.each do |business| %>
    <div class="col-12 col-md-3 col-lg-3 d-flex justify-content-around rounded mt-2">
      <div class="card w-100">
        <div class="card-body">
        <h5 class="card-title fw-bold text-dark"><%= link_to business.name, business %></h5>
          <p class="card-text"><%= business.description %>  </p>
        </div>
      </div>
    </div>
   <% end %>
</div>
