<div class="row justify-content-center">
  <div class="col-md-6">
    <%= simple_form_for @account do |f| %>
      <%= f.input :name %>
      <%= f.input :balance %>
      <%= f.input :currency, as: :radio_buttons, collection:["COP","USD"] %>
      <%= f.button :submit, class:"btn btn-secundary" %>
    <% end %>
  </div>
</div>
